{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Poker Solver",
  "identifier": "com.pokersolver.desktop",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": { "script": "npm run dev", "cwd": "../../frontend" },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": { "script": "npm run build", "cwd": "../../frontend" },
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Poker Solver",
        "width": 1300,
        "height": 1280
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
